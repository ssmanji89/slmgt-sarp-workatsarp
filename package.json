{
  "name": "summit-at-renaissance-park",
  "version": "1.0.0",
  "description": "Website for Summit at Renaissance Park",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "serve .",
    "lint": "eslint js/",
    "lint:fix": "eslint js/ --fix",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "start-server-and-test start http://localhost:3000 cypress:run"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "offline.html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@testing-library)"
    ],
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "moduleNameMapper": {
      "^fs$": "<rootDir>/tests/mocks/fs.js",
      "^path$": "<rootDir>/tests/mocks/path.js"
    },
    "snapshotResolver": "<rootDir>/tests/snapshotResolver.js",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/mocks/"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/jest-dom": "^6.4.0",
    "babel-jest": "^29.7.0",
    "cypress": "^14.0.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "serve": "^14.2.1",
    "start-server-and-test": "^2.0.10"
  }
}
