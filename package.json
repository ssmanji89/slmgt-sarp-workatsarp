{
  "name": "summit-at-renaissance-park",
  "version": "1.0.0",
  "description": "Website for Summit at Renaissance Park",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "serve .",
    "lint": "eslint js/",
    "lint:fix": "eslint js/ --fix"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/sw.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@testing-library/jest-dom": "^6.4.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "serve": "^14.2.1"
  }
}
